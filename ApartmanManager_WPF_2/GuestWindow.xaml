<Window x:Class="ApartmanManager.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApartmanManager"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Vendégek" MinHeight="420" MinWidth="600" Height="420" Width="420" Icon="Icons/guest_2.png">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="338*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel  Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,3,3" Grid.Column="1">

            <Button x:Name="BtnCancel" IsEnabled="True" Width="100" Click="BtnCancel_Click" >
                <StackPanel  Orientation="Horizontal">
                    <Image Source="Icons/cancel_1.png"  />
                    <TextBlock Margin="3,0,0,0" FontSize="16"><Run Text="Bezárás"/></TextBlock>
                </StackPanel>
            </Button>

        </StackPanel>

        <TabControl Grid.Row="0" Grid.Column="0" TabStripPlacement="Top" Margin="3,3,3,3" >
            <TabItem Header="Aktív vendégek" HorizontalAlignment="Left" Height="25" Margin="0" VerticalAlignment="Top" Width="100" >
                <Grid Background="#FFE0E0E0" Margin="0,0,0,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="89*"/>
                    </Grid.RowDefinitions>

                    <StackPanel  Orientation="Horizontal">
                        <Image Source="Icons/booking_1.png" Margin="15,0,0,0"  />
                        <TextBlock Margin="10,0,0,0" FontSize="18">Aktív vendégek</TextBlock>

                    </StackPanel>
                    <ListView Name="ActiveGuestListView" Margin="10,10,10,5" Grid.Row="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="60" DisplayMemberBinding="{Binding HouseID}"/>
                                <GridViewColumn Header="Vezetéknév" Width="120" DisplayMemberBinding="{Binding HouseName}"/>
                                <GridViewColumn Header="Keresztnév" Width="120" DisplayMemberBinding="{Binding NumberOfRooms}"/>
                                <GridViewColumn Header="Ház" Width="150" DisplayMemberBinding="{Binding Note}"/>
                                <GridViewColumn Header="Szoba" Width="100" DisplayMemberBinding="{Binding Note}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </Grid>

            </TabItem>
            <TabItem Header="Archívum" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80">
                <Grid Background="#FFE0E0E0" Margin="0,0,0,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="89*"/>
                    </Grid.RowDefinitions>

                    <StackPanel  Orientation="Horizontal">
                        <Image Source="Icons/guest_3.png" Margin="15,0,0,0"  />
                        <TextBlock Margin="10,0,0,0" FontSize="18"><Run Text="Archív"/><Run Text=" vendég"/><Run Text="ek"/></TextBlock>
                        <TextBox Margin="30,0,0,0" FontSize="16" Width="150" Name="GuestFilterBox"></TextBox>
                        <Button x:Name="BtnDelete" IsEnabled="True" Margin="10,0,0,0" >
                            <StackPanel  Orientation="Horizontal">
                                <Image Source="Icons/delete_1.png"  />
                                <TextBlock Margin="3,0,0,0" FontSize="16"><Run Text="Vendég törlés"/></TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <ListView Name="GuestListView" Margin="10,10,10,5" Grid.Row="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="60" DisplayMemberBinding="{Binding HouseID}"/>
                                <GridViewColumn Header="Vezetéknév" Width="120" DisplayMemberBinding="{Binding HouseName}"/>
                                <GridViewColumn Header="Keresztnév" Width="120" DisplayMemberBinding="{Binding NumberOfRooms}"/>
                                <GridViewColumn Header="Megjegyzés" Width="200" DisplayMemberBinding="{Binding Note}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </Grid>
            </TabItem>
            <TabItem Header="Új vendég" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80">
                <Grid Background="#FFE0E0E0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="265*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <StackPanel  Grid.Row="2" HorizontalAlignment="Left" Orientation="Horizontal" Margin="3,3,0,0" Grid.Column="1">

                        <Button Name="BtnAdd" IsEnabled="True" Width="100" Click="BtnAdd_Click" >
                            <StackPanel  Orientation="Horizontal">
                                <Image Source="Icons/plus.png"  />
                                <TextBlock Margin="3,0,0,0" FontSize="16">Hozzáad</TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel  Orientation="Horizontal">
                        <Image Source="Icons/guest_1.png" Margin="15,0,0,0"  />
                        <TextBlock Margin="10,0,0,0" FontSize="18">Új vendég hozzáadása</TextBlock>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Left" Height="20" Margin="20,20,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Vezetéknév:" VerticalAlignment="Top" Width="130" FontSize="16"/>
                    <TextBlock HorizontalAlignment="Left" Height="20" Margin="20,45,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Keresztnév:" VerticalAlignment="Top" Width="130" FontSize="16"/>
                    <TextBlock HorizontalAlignment="Left" Height="20" Margin="20,80,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Telefonszám:" VerticalAlignment="Top" Width="130" FontSize="16"/>
                    <TextBlock HorizontalAlignment="Left" Height="20" Margin="20,105,0,0" Grid.Row="1" TextWrapping="Wrap" Text="E-mail cím:" VerticalAlignment="Top" Width="130" FontSize="16"/>
                    <TextBlock HorizontalAlignment="Left" Height="20" Margin="20,130,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Lakcím:" VerticalAlignment="Top" Width="130" FontSize="16"/>
                    <TextBlock HorizontalAlignment="Left" Height="25" Margin="20,160,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Megjegyzés:" VerticalAlignment="Top" Width="130" FontSize="16"/>
                    <TextBox Name="FamilyNameField" HorizontalAlignment="Left" Height="25" Margin="170,20,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" FontSize="16"/>
                    <TextBox Name="FirstNameField" HorizontalAlignment="Left" Height="25" Margin="170,45,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" FontSize="16"/>
                    <TextBox Name="TelField" HorizontalAlignment="Left" Height="25" Margin="170,80,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" FontSize="16"/>
                    <TextBox Name="MailField" HorizontalAlignment="Left" Height="25" Margin="170,105,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" FontSize="16"/>
                    <TextBox Name="AddressField" HorizontalAlignment="Left" Height="25" Margin="170,130,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" FontSize="16"/>
                    <TextBox Name="NoteField" HorizontalAlignment="Left" Height="90" Margin="170,160,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="250" FontSize="16"/>

                </Grid>
            </TabItem>
            <TabItem Header="Paraméterek" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80" IsEnabled="False">
                <Grid Background="#FFE0E0E0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="265*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>


                    <StackPanel  Orientation="Horizontal">
                        <Image Source="Icons/guest_2.png" Margin="15,0,0,0"  />
                        <TextBlock Margin="10,0,0,0" FontSize="18">Részletes vendég információ</TextBlock>
                    </StackPanel>
                    <TextBox Name="GuestNameField" HorizontalAlignment="Left" Height="30" Margin="160,30,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Ház név" VerticalAlignment="Top" Width="181" FontSize="18"/>
                    <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,30,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Ház neve:" VerticalAlignment="Top" Width="130" FontSize="18"/>
                    <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,80,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Szobák száma:" VerticalAlignment="Top" Width="130" FontSize="18"/>
                    <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,150,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Megjegyzés:" VerticalAlignment="Top" Width="130" FontSize="18"/>
                    <TextBox Name="GuestNoteField" HorizontalAlignment="Left" Height="100" Margin="160,150,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Megjegyzés (pl. cím stb.)" VerticalAlignment="Top" Width="250" FontSize="14"/>


                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
